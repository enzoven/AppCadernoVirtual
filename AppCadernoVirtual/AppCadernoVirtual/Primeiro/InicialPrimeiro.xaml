<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadernoVirtual.Primeiro.InicialPrimeiro">

    <!-- Nesse projeto decidi não utilizar o ScrollView como alguns utilizaram, por isso, usei apenas Grids 
    para enquadrar todos os botões em uma só página -->
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="05">

            <Label Text="MATÉRIAS DO PRIMEIRO ANO" HorizontalTextAlignment="Center" FontSize="Medium"/>
            <Label />
            
    <!-- Definições da Grid para deixar todos os botões menores, encaixados de 2 em 2
    um ao lado do outro, cabendo em uma só página -->        
            
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

       <!-- Botões separados por matéria e cor, definidos cada um em uma posição diferente pela Grid
       acompanhado de um evento ButtonClicked para registrar o clique do usuário e executar a ação de
       abrir uma página selecionada -->
                
                <Button Grid.Row="0" Grid.Column="0" Text="Português" Clicked="Button_Clicked" BackgroundColor="DarkRed"/>
                <Button Grid.Row="1" Grid.Column="0" Text="Matemática" Clicked="Button_Clicked_1" BackgroundColor="#444444"/>
                <Button Grid.Row="2" Grid.Column="0" Text="Química" Clicked="Button_Clicked_2" BackgroundColor="DarkRed"/>
                <Button Grid.Row="3" Grid.Column="0" Text="Física" Clicked="Button_Clicked_3" BackgroundColor="#444444"/>
                <Button Grid.Row="4" Grid.Column="0" Text="Biologia" Clicked="Button_Clicked_4" BackgroundColor="DarkRed" />
                <Button Grid.Row="5" Grid.Column="0" Text="História" Clicked="Button_Clicked_5" BackgroundColor="#444444" />
                <Button Grid.Row="6" Grid.Column="0" Text="Geografia" Clicked="Button_Clicked_6" BackgroundColor="DarkRed" />
                <Button Grid.Row="7" Grid.Column="0" Text="Filosofia" Clicked="Button_Clicked_7" BackgroundColor="#444444"/>
                <Button Grid.Row="8" Grid.Column="0" Text="Arte"  Clicked="Button_Clicked_8" BackgroundColor="DarkRed"/>
                <Button Grid.Row="0" Grid.Column="1" Text="Inglês" Clicked="Button_Clicked_9" BackgroundColor="#444444" />
                <Button Grid.Row="1" Grid.Column="1" Text="Ed Física" Clicked="Button_Clicked_10" BackgroundColor="DarkRed"/>
                <Button Grid.Row="5" Grid.Column="1" Text="Programação Web I" Clicked="Button_Clicked_11" BackgroundColor="DarkRed"/>
                <Button Grid.Row="6" Grid.Column="1" Text="Análise de Sistemas" Clicked="Button_Clicked_12" BackgroundColor="#444444" />
                <Button Grid.Row="7" Grid.Column="1" Text="Fund da Informatica" Clicked="Button_Clicked_13" BackgroundColor="DarkRed" />
                <Button Grid.Row="2" Grid.Column="1" Text="Banco de Dados I" Clicked="Button_Clicked_14" BackgroundColor="#444444" />
                <Button Grid.Row="3" Grid.Column="1" Text="Técnica de Prog e Alg" Clicked="Button_Clicked_15" BackgroundColor="DarkRed" />
                <Button Grid.Row="4" Grid.Column="1" Text="Design Digital" Clicked="Button_Clicked_16" BackgroundColor="#444444" />


            </Grid>
            <!-- Créditos hehe -->
            <Label />
            <Label Text="Etec Joaquim Ferreira do Amaral - Jaú" HorizontalTextAlignment="Center"/>
            <Label Text="Enzo Vendramini Paggiaro" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>